#include <iostream>

using namespace std;


bool ehPar(int numero) {
    return numero % 2 == 0;
}

int main() {
    int numero;
    cout << "Digite um numero inteiro: ";
    cin >> numero;

    if (ehPar(numero)) {
        cout << "O numero e par." << endl;
    } else {
        cout << "O numero e impar." << endl;
    }

    return 0;
}
