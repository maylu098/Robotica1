#include <iostream>
#include <string>

using namespace std;


void exibirSituacao(string nome, float nota) {
    cout << "Aluno: " << nome << endl;
    if (nota >= 7.0)
        cout << "Situacao: Aprovado" << endl;
    else
        cout << "Situacao: Reprovado" << endl;
}

int main() {
    string nome;
    float nota;

    cout << "Digite o nome do aluno: ";
    getline(cin, nome);

    cout << "Digite a nota do aluno: ";
    cin >> nota;

    exibirSituacao(nome, nota);

    return 0;
