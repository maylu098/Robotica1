#include <iostream>

using namespace std;

   const double PI = 3.1415926535;

   double calcularAreaCirculo(double raio) {
    return PI * raio * raio;
}

int main() {
    
    double raio;

    cout << "Digite o raio do circulo: ";
    cin >> raio;


    double area = calcularAreaCirculo(raio);
    cout << "Area do circulo: " << area << endl;

    return 0;
}

